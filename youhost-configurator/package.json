{
    "name": "youhost-configurator",
    "version": "1.0.0",
    "description": "Configurador para criação de aplicativos YouHost",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder"
    },
    "build": {
      "appId": "com.youhost.configurator",
      "productName": "YouHost Configurator",
      "directories": {
        "output": "dist"
      },
      "linux": {
        "target": "AppImage"
      },
      "win": {
        "target": "nsis"
      },
      "mac": {
        "target": "dmg"
      }
    },
    "dependencies": {
      "simple-git": "^3.23.0",
      "electron-log": "^5.2.0",
      "electron-store": "^8.2.0"
    },
    "devDependencies": {
      "electron": "^35.0.0",
      "electron-builder": "^25.0.0"
    }
  }